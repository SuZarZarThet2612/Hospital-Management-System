            <TextBlock x:Name="textBlock2_Copy2" HorizontalAlignment="Left" Margin="34,137,0,0" TextWrapping="Wrap" Text="Address" VerticalAlignment="Top" FontWeight="Bold"/>
            <TextBlock x:Name="textBlock2_Copy3" HorizontalAlignment="Left" Margin="34,176,0,0" TextWrapping="Wrap" Text="Phone no" VerticalAlignment="Top" FontWeight="Bold"/>
            <TextBox x:Name="sdrName" HorizontalAlignment="Left" Height="23" Margin="155,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="sdrAge" HorizontalAlignment="Left" Height="23" Margin="155,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="sdrGender" HorizontalAlignment="Left" Height="23" Margin="155,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="sdrAddr" HorizontalAlignment="Left" Height="23" Margin="155,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="sdrPhno" HorizontalAlignment="Left" Height="23" Margin="155,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.871,0.855"/>
            <TextBlock x:Name="textBlock2_Copy4" HorizontalAlignment="Left" Margin="34,219,0,0" TextWrapping="Wrap" Text="Consultation Time" VerticalAlignment="Top" FontWeight="Bold"/>
            <TextBox x:Name="sdrfCons_T" HorizontalAlignment="Left" Height="23" Margin="204,212,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="71"/>
            <TextBlock x:Name="textBlock4" HorizontalAlignment="Left" Margin="34,289,0,0" TextWrapping="Wrap" Text="Department" VerticalAlignment="Top" RenderTransformOrigin="-0.11,0.829" FontWeight="Bold"/>
            <TextBox x:Name="sdrDept" HorizontalAlignment="Left" Height="23" Margin="155,282,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBlock x:Name="textBlock6" HorizontalAlignment="Left" Margin="170,212,0,0" TextWrapping="Wrap" Text="From" VerticalAlignment="Top" FontWeight="Bold"/>
            <TextBox x:Name="sdrtCons_T" HorizontalAlignment="Left" Height="23" Margin="204,240,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="71"/>
            <TextBlock x:Name="textBlock6_Copy" HorizontalAlignment="Left" Margin="185,240,0,0" TextWrapping="Wrap" Text="To" VerticalAlignment="Top" FontWeight="Bold"/>
        </Grid>
        <Button x:Name="sdocbtn" Content="" HorizontalAlignment="Left" Margin="479,382,0,0" VerticalAlignment="Top" Width="46" FontFamily="Traditional Arabic" Height="41" RenderTransformOrigin="0.535,0.552" Click="sdocbtn_Click">
            <Button.Background>
                <ImageBrush ImageSource="images/c1.jpg"/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="textBlock3" HorizontalAlignment="Left" Margin="427,398,0,0" TextWrapping="Wrap" Text="Close" VerticalAlignment="Top" FontWeight="Bold" RenderTransformOrigin="1.074,0.28" Foreground="#FFE61616" FontSize="18.667"/>
        <ComboBox x:Name="SdrNamecmb" HorizontalAlignment="Left" Margin="39,260,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="SdrNamecmb_SelectionChanged"/>

    </Grid>
