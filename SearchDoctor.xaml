<Window x:Class="WpfApplication1.SearchDoctor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Search Doctor" Height="466.67" Width="569.072" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid Margin="0,0,0,-3">




        <Grid.Background>
            <ImageBrush ImageSource="images/r6.jpg"/>
        </Grid.Background>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="193,10,0,0" TextWrapping="Wrap" Text="Search Doctor" VerticalAlignment="Top" FontSize="21.333" FontWeight="Bold" FontFamily="Traditional Arabic" FontStyle="Italic" Grid.ColumnSpan="2"/>
        <Rectangle HorizontalAlignment="Left" Height="117" Margin="30,62,0,0" Stroke="White" VerticalAlignment="Top" Width="112">
            <Rectangle.Fill>
                <ImageBrush ImageSource="images/d8.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="39,219,0,0" TextWrapping="Wrap" Text="Search Doctor Name" VerticalAlignment="Top" FontSize="16" FontFamily="Traditional Arabic" FontWeight="Bold"/>
        <Grid HorizontalAlignment="Left" Height="315" Margin="228,62,0,0" VerticalAlignment="Top" Width="297" Background="White">
            <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="34,21,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" FontWeight="Bold"/>
