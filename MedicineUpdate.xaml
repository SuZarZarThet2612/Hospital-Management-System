        <DataGrid x:Name="medDataGrid" HorizontalAlignment="Left" Margin="0,244,0,0" VerticalAlignment="Top" Width="345" Height="256" AlternatingRowBackground="#FF4DB3EE" AlternationCount="1"/>
        <TextBox x:Name="medPricetxt" HorizontalAlignment="Left" Height="23" Margin="182,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="medExDtxt" HorizontalAlignment="Left" Height="23" Margin="182,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="medUpcmb" HorizontalAlignment="Left" Margin="182,67,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="medUpcmb_SelectionChanged"/>

    </Grid>
</Window>
