        <Button x:Name="pregbtn2" Content="View Rooms" HorizontalAlignment="Left" Margin="433,183,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="2.187,-8.591" Click="pregbtn2_Click">
