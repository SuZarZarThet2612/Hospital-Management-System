                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB02222" Offset="0"/>
                    <GradientStop Color="#FF914848" Offset="1"/>
                    <GradientStop Color="#FFE6CCCC" Offset="0.5"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBlock x:Name="textBlock3_Copy5" HorizontalAlignment="Left" Margin="62,511,0,0" TextWrapping="Wrap" Text="Diease" VerticalAlignment="Top" FontFamily="Traditional Arabic" FontSize="16"/>
        <TextBox x:Name="ODiseaseregtxtbox" HorizontalAlignment="Left" Height="23" Margin="242,512,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="textBlock5" HorizontalAlignment="Left" Margin="62,334,0,0" TextWrapping="Wrap" Text="Gender" VerticalAlignment="Top" FontSize="16" FontFamily="Traditional Arabic"/>
        <RadioButton x:Name="radioButton" Content="Female" HorizontalAlignment="Left" Margin="308,337,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="oPMale" Content="Male" HorizontalAlignment="Left" Margin="242,337,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="OpDidcmb" HorizontalAlignment="Left" Margin="242,64,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="dr_idtxtbox" HorizontalAlignment="Left" Height="23" Margin="242,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="oDateregtxtbox" HorizontalAlignment="Left" Margin="242,144,0,0" VerticalAlignment="Top" Width="120"/>
        <Rectangle HorizontalAlignment="Left" Height="26" Margin="92,570,0,0" VerticalAlignment="Top" Width="29">
