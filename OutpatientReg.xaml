        <TextBlock x:Name="textBlock3" HorizontalAlignment="Left" Margin="62,137,0,0" TextWrapping="Wrap" Text="Date" VerticalAlignment="Top" FontSize="16" FontFamily="Traditional Arabic"/>
        <TextBlock x:Name="textBlock3_Copy" HorizontalAlignment="Left" Margin="62,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Patient's Information" FontFamily="Traditional Arabic" FontSize="16" FontWeight="Bold"/>
