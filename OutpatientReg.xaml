        <TextBlock x:Name="textBlock3_Copy1" HorizontalAlignment="Left" Margin="62,283,0,0" TextWrapping="Wrap" Text="Age" VerticalAlignment="Top" FontFamily="Traditional Arabic" FontSize="16"/>
        <TextBlock x:Name="textBlock3_Copy3" HorizontalAlignment="Left" Margin="62,402,0,0" TextWrapping="Wrap" Text="Phone" VerticalAlignment="Top" FontFamily="Traditional Arabic" FontSize="16"/>
        <TextBlock x:Name="textBlock3_Copy4" HorizontalAlignment="Left" Margin="60,462,0,0" TextWrapping="Wrap" Text="Address" VerticalAlignment="Top" FontFamily="Traditional Arabic" FontSize="16"/>
        <TextBox x:Name="OAgeregtxtbox" HorizontalAlignment="Left" Height="23" Margin="242,283,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="OPhoneregtxtbox" HorizontalAlignment="Left" Height="23" Margin="242,395,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="OAddrregtxtbox" HorizontalAlignment="Left" Height="51" Margin="242,435,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ONameregtxtbox" HorizontalAlignment="Left" Height="23" Margin="242,245,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="textBlock4" HorizontalAlignment="Left" Margin="62,175,0,0" TextWrapping="Wrap" Text="Doctor ID" VerticalAlignment="Top"/>
        <Button x:Name="OpSavebtn" Content="Save" HorizontalAlignment="Left" Margin="121,570,0,0" VerticalAlignment="Top" Width="58" FontFamily="Traditional Arabic" FontSize="14.667" FontWeight="Bold" Click="OpSavebtn_Click" BorderBrush="#FF5FB65F">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF72D654" Offset="0.017"/>
                    <GradientStop Color="#FF56C336" Offset="1"/>
                    <GradientStop Color="#FFCBE0C5" Offset="0.513"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Opcancelbtn" Content="Cancel" HorizontalAlignment="Left" Margin="252,570,0,0" VerticalAlignment="Top" Width="67" FontFamily="Traditional Arabic" FontSize="14.667" FontWeight="Bold" Click="Opcancelbtn_Click">
