        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="26" Margin="228,570,0,0" VerticalAlignment="Top" Width="24">
            <Rectangle.Fill>
                <ImageBrush ImageSource="images/cancel.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="42" Margin="92,0,0,0" VerticalAlignment="Top" Width="45">
            <Rectangle.Fill>
                <ImageBrush ImageSource="images/opreg.png"/>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</Window>
