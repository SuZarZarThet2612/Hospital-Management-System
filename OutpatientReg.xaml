        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="OutpatientReg" Height="685.86" Width="431.175" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid Margin="0,0,-8,1" Background="#FF46B487">
