            <TextBlock x:Name="textBlock2_Copy1" HorizontalAlignment="Left" Margin="39,120,0,0" TextWrapping="Wrap" Text="Gender" VerticalAlignment="Top" FontSize="16" FontFamily="Traditional Arabic" FontWeight="Bold"/>
            <TextBlock x:Name="textBlock2_Copy2" HorizontalAlignment="Left" Margin="39,166,0,0" TextWrapping="Wrap" Text="Address" VerticalAlignment="Top" FontSize="16" FontFamily="Traditional Arabic" FontWeight="Bold"/>
            <TextBlock x:Name="textBlock2_Copy3" HorizontalAlignment="Left" Margin="39,275,0,0" TextWrapping="Wrap" Text="Phone no" VerticalAlignment="Top" FontSize="16" FontFamily="Traditional Arabic" FontWeight="Bold"/>
            <TextBlock x:Name="textBlock2_Copy4" HorizontalAlignment="Left" Margin="39,326,0,0" TextWrapping="Wrap" Text="Doctor Name" VerticalAlignment="Top" FontSize="16" FontFamily="Traditional Arabic" FontWeight="Bold"/>
            <TextBlock x:Name="textBlock2_Copy5" HorizontalAlignment="Left" Margin="39,380,0,0" TextWrapping="Wrap" Text="Disease" VerticalAlignment="Top" FontSize="16" FontFamily="Traditional Arabic" FontWeight="Bold"/>
            <TextBlock x:Name="textBlock2_Copy6" HorizontalAlignment="Left" Margin="39,331,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <TextBox x:Name="OpSPname" HorizontalAlignment="Left" Height="23" Margin="169,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="OpSGender" HorizontalAlignment="Left" Height="23" Margin="169,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="OpSAdr" HorizontalAlignment="Left" Height="82" Margin="169,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="OpSPno" HorizontalAlignment="Left" Height="23" Margin="169,276,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="OpSDname" HorizontalAlignment="Left" Height="23" Margin="169,326,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="OpSDisease" HorizontalAlignment="Left" Height="73" Margin="169,380,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="OpSAge" HorizontalAlignment="Left" Height="23" Margin="169,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        </Grid>
        <Button x:Name="OpClosebtn" Content="" HorizontalAlignment="Left" Margin="488,565,0,0" VerticalAlignment="Top" Width="38" Height="36" Click="OpClosebtn_Click">
            <Button.Background>
                <ImageBrush ImageSource="images/c4.jpg"/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="textBlock4" HorizontalAlignment="Left" Margin="444,577,0,0" TextWrapping="Wrap" Text="Close" VerticalAlignment="Top" RenderTransformOrigin="-1.909,8.537" FontSize="16" FontFamily="Traditional Arabic" FontWeight="Bold" Foreground="#FF072F97"/>
        <ComboBox x:Name="OpsnameCmb" HorizontalAlignment="Left" Margin="36,201,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="OpsnameCmb_SelectionChanged"/>

    </Grid>
</Window>
