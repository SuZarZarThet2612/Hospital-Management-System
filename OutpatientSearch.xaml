<Window x:Class="WpfApplication1.OutpatientSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Outpatient Search" Height="660.44" Width="579.021" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFB7CCE6">
        <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="                                     Outpatient Search" VerticalAlignment="Top" FontSize="21.333" FontFamily="Traditional Arabic" FontWeight="Bold" Height="45" Foreground="#FFBADCF0">
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF6ABCE2" Offset="0.003"/>
                    <GradientStop Color="#FF0C3346" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Background>
        </TextBlock>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="36,158,0,0" TextWrapping="Wrap" Text="Search Patient ID" VerticalAlignment="Top" FontSize="16" FontFamily="Traditional Arabic" FontWeight="Bold"/>
        <Grid HorizontalAlignment="Left" Height="481" Margin="191,79,0,0" VerticalAlignment="Top" Width="335" Background="White">
            <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="39,25,0,0" TextWrapping="Wrap" Text="Patient Name" VerticalAlignment="Top" FontSize="16" FontFamily="Traditional Arabic" FontWeight="Bold"/>
